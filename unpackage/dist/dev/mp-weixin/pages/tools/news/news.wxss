page {
  background-color: #f5f6f8;
}
.content {
  position: relative;
}
.tabs {
  position: fixed;
  z-index: 10;
  top: 0px;
  right: 0;
  left: 0;
  box-sizing: border-box;
  white-space: nowrap;
  padding: 10rpx;
  padding-bottom: 12rpx;
  margin-right: 20rpx;
  background-color: #ffffff;
}
.tabs .tabs-item {
    display: inline-block;
    font-size: 30rpx;
    margin: 0 16rpx;
    border-bottom: 2px solid transparent;
}
.tabs .tabs-item.active {
      border-bottom: 2px solid #018594;
}
.newsList {
  padding-top: 37px;
}
.listItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 16rpx;
  background-color: #fff;
  margin: 8rpx;
  min-height: 140rpx;
  border-radius: 8rpx;
}
.listItem .img-wrap {
    width: 200rpx;
    height: 140rpx;
    margin-right: 12rpx;
}
.listItem .img-wrap image {
      width: 100%;
      height: 100%;
      display: block;
}
.listItem .itemInfo {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
}
.listItem .itemInfo .itemtitle {
      font-size: 28rpx;
}
.listItem .itemInfo .other {
      font-size: 24rpx;
      color: #888;
}
.listItem .itemInfo .other .source {
        margin-right: 20rpx;
}

