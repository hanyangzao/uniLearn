page {
  background-color: #f5f6f8;
}
.search {
  position: relative;
  overflow: hidden;
  background-color: #ffffff;
  width: 600rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin: 40rpx auto;
  padding-right: 130rpx;
  box-sizing: border-box;
}
.search input {
    height: 100%;
    width: 100%;
    padding-left: 30rpx;
}
.search .searchBtn {
    position: absolute;
    background-color: #5ABA84;
    right: 10rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    z-index: 10;
    top: 10rpx;
    text-align: center;
    line-height: 80rpx;
}
.info {
  padding: 20rpx 80rpx;
}
.info .logisticsTypeName {
    font-size: 28rpx;
}
.info .status {
    color: #68b7fc;
    margin-left: 20rpx;
}
.info .logisticsList {
    margin-top: 20rpx;
}
.info .logisticsList .item {
      background-color: #fff;
      border-radius: 16rpx;
      padding: 12rpx;
      margin-bottom: 12rpx;
}
.info .logisticsList .item .time {
        font-size: 24rpx;
        margin-bottom: 8rpx;
}
.info .logisticsList .item .desc {
        font-size: 24rpx;
}

